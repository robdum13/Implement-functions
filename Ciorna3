#include "stdafx.h"
#include <iostream>
#include <fstream>
#include <vector>
#include <string>
#include <sstream>
#include <Windows.h>

struct Item {
    int ParentFolderID;
    int ItemID;
    char ItemType;
    std::string ItemName;
    std::string Content;
};

// Function to split a string by a delimiter
std::vector<std::string> split(const std::string& s, char delimiter) {
    std::vector<std::string> tokens;
    std::string token;
    std::istringstream tokenStream(s);
    while (std::getline(tokenStream, token, delimiter)) {
        tokens.push_back(token);
    }
    return tokens;
}

// Function to read ContentDescriptor.txt and parse its contents
std::vector<Item> readContentDescriptor(const std::string& filePath) {
    std::vector<Item> items;
    std::ifstream file(filePath);

    if (!file.is_open()) {
        std::cerr << "Error: Unable to open file " << filePath << std::endl;
        return items;
    }

    std::string line;
    while (std::getline(file, line)) {
        // Skip header and empty lines
        if (line.empty() || line.find("Possible item types:") != std::string::npos) {
            continue;
        }

        // Split the line by '|'
        std::vector<std::string> parts = split(line, '|');

        if (parts.size() != 5) {
            std::cerr << "Error parsing line: " << line << std::endl;
            continue;
        }

        Item item;
        try {
            item.ParentFolderID = std::stoi(parts[0]);
            item.ItemID = std::stoi(parts[1]);
            item.ItemType = parts[2][0];
            item.ItemName = parts[3];
            item.Content = parts[4];
        }
        catch (const std::exception& e) {
            std::cerr << "Error parsing line: " << line << std::endl;
            continue;
        }

        std::cout << "Read item: ParentFolderID: " << item.ParentFolderID << ", ItemID: " << item.ItemID << ", ItemType: " << item.ItemType << ", ItemName: " << item.ItemName << ", Content: " << item.Content << std::endl;

        items.push_back(item);
    }

    return items;
}

// Function to display the contents recursively
void displayContents(const std::vector<Item>& items) {
    // Implement the recursive display of contents here
    // For each item, print its details recursively
    for (const auto& item : items) {
        std::cout << "ParentFolderID: " << item.ParentFolderID << ", ItemID: " << item.ItemID << ", ItemType: " << item.ItemType << ", ItemName: " << item.ItemName << ", Content: " << item.Content << std::endl;
    }
}

int _tmain(int argc, _TCHAR* argv[]) {
    char* filePath;

    // Get the current working directory: 
    if ((filePath = _getcwd(NULL, 0)) == NULL) {
        perror("_getcwd error");
        return (-1);
    }

    char* sampleFileName = "\\ContentDescriptor.txt";
    strncat(filePath, sampleFileName, strlen(sampleFileName));

    printf("Reading file %s \n\n", filePath);

    std::vector<Item> items = readContentDescriptor(filePath);
    displayContents(items);

    printf("\nPress any key to continue...");
    _getch();
    return 0;
}
